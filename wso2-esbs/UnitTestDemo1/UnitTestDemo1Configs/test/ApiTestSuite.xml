                <request-method>GET</request-method>
            </input>
            <assertions>
                <assertEquals>
                    <actual>$body</actual>
                    <expected><![CDATA[GET RESPONSE]]></expected>
                    <message>The response payload is not correct!</message>
                </assertEquals>
